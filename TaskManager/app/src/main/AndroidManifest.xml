<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.Task.todolist">

    <application
        android:allowBackup="true"
        android:label="TaskManager"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name="com.Task.todolist.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver android:name="com.Task.todolist.NotificationPublisher" />

        <activity android:name="com.Task.todolist.AddItem" />
        <activity android:name="com.Task.todolist.EditItem" />
        <activity android:name="com.Task.todolist.addCategory"></activity>
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
    </application>

</manifest>